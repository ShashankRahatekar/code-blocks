{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@definitions/*": [
                "../definitions/*"
            ],
            "@/*": ["src/*"],
            "@services/*": ["services/*"]
        }
    },
    "include": [
        "src",
        "services"
    ]
}